{
  "name": "backend-belibeli",
  "version": "0.10.0",
  "description": "An e-commerce project to sell products online.",
  "author": "Ricky Roy Ramirez Pineda",
  "license": "MIT",
  "main": "dist/main.js",
  "engines": {
    "node": ">=20.12.0",
    "npm": ">=10.5.0"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/main.js",
    "dev": "tsnd -r tsconfig-paths/register --respawn --transpile-only src/main.ts",
    "lint": "eslint \"{src,tests}/**/*.ts\" ",
    "lint:fix": "eslint --fix \"{src,test}/**/*.ts\" ",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "npx prisma migrate dev --name init",
    "db:push": "npx prisma db push"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/fs-extra": "11.0.4",
    "@types/jsonwebtoken": "9.0.6",
    "@types/morgan": "1.9.9",
    "@types/multer": "1.4.11",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.7.0",
    "@typescript-eslint/parser": "7.7.0",
    "@vitest/coverage-v8": "1.5.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "prettier": "3.2.5",
    "prisma": "5.12.1",
    "rimraf": "5.0.5",
    "supertest": "6.3.4",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "1.8.8",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.4.5",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.5.0"
  },
  "dependencies": {
    "@prisma/client": "5.12.1",
    "bcrypt": "5.1.1",
    "cloudinary": "2.2.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "express": "4.19.2",
    "fs-extra": "11.2.0",
    "jsonwebtoken": "9.0.2",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "stripe": "15.6.0",
    "zod": "3.23.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RamirezPineda/backend-belibeli.git"
  },
  "bugs": {
    "url": "https://github.com/RamirezPineda/backend-belibeli/issues"
  },
  "homepage": "https://github.com/RamirezPineda/backend-belibeli#readme",
  "keywords": [
    "ecommerce",
    "typescript",
    "express"
  ]
}
